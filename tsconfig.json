{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "rootDir": "./src",

    "outDir": "./dist",

    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES5",
    "importHelpers": true,
    "downlevelIteration": true,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
